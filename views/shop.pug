doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/product.css")
    body
        header.main-header 
            nav.main-header__nav
                ul.main-header__item-list
                    li.main-header__item
                        a.active(href="/") Shop
                    li.main-header__item 
                        a(href="/add-product") Add Product
        main
            .grid
                each product in prods
                    article.card.product-item 
                        header.card__header     
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://media.gettyimages.com/photos/stack-of-books-picture-id157482029?s=612x612", alt="Some pic")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more ! 
                            .card__actions 
                                button.btn  Add to cart 
